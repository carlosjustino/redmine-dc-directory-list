
<div id="telaanexo">
	<h1>Progress <%= @clienteprogress %></h1>
	<h2>Tarefa #<%= link_to @issue.id, issue_path(id: @issue.id), :onclick => params[:action] == 'show' ? "$('#update').hide(); return false;" : '' %> - <%= @clienteprogress %></h2>
	<div>



    <div id="buscaarquivos">

      <%= labelled_form_for 'arquivonovo', :url => ({:controller => :listdirectory, :action => 'create'}) do |f| %>

        <div class="box tabular">
          <p><%= f.text_field :nome, :required => true %></p>
          <p><%= f.date_field :data, :required => true %></p>
          <p><%= f.text_field :issue_id, :required => false %></p>
        </div>

        <%= submit_tag l(:button_save) %>
        <%= link_to l(:button_cancel), :back %>
      <% end %>
		</div>							
		 <br />
		<table class="list issues">
			<thead>
				<tr>
					<th colspan="4">Arquivos Anexados</th>
				</tr>
				<tr>
					<th>Nome Arquivo</th>
					<th>Diret&oacute;rio</th>
					<th>Data Altera&ccedil;&atilde;o</th>
					<th>Usu&aacute;rio</th>
				</tr>
			</thead>
			<tbody>
				<%- if @arquivo  %>
					<% @arquivo.each do |arq| %>
						<tr>
							<td><%= arq.nome %></td>
							<td><%= arq.diretorio %></td>
							<td><%= arq.data %></td>
							<td><%= arq.usuario %></td>
						</tr>
					<% end %>
				<% end -%>
				
			</tbody>
		</table>
	</div>
</div>